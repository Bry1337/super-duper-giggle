<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <data>
    <variable
        name="viewModel"
        type="bry1337.github.io.creditnotebook.presentation.persontransaction.TransactionViewModel"
        />
  </data>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/value_1dp"
      android:layout_marginTop="@dimen/value_1dp"
      android:background="@android:color/white"
      android:gravity="center_vertical"
      >

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:padding="@dimen/value_8dp"
        android:textSize="@dimen/value_16sp"
        app:mutableText="@{viewModel.getDate()}"
        tools:text="@string/dummy_name"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        >
      <TextView
          android:id="@+id/tvDebit"
          android:layout_width="@dimen/value_100dp"
          android:layout_height="wrap_content"
          android:padding="@dimen/value_8dp"
          android:textSize="@dimen/value_16sp"
          app:mutableText="@{viewModel.getDebit()}"
          tools:text="@string/dummy_name"
          android:gravity="end"
          />
      <TextView
          android:id="@+id/tvCredit"
          android:layout_width="@dimen/value_100dp"
          android:layout_height="wrap_content"
          android:padding="@dimen/value_8dp"
          android:textSize="@dimen/value_16sp"
          app:mutableText="@{viewModel.getCredit()}"
          tools:text="@string/dummy_name"
          android:gravity="end"
          />
    </LinearLayout>
  </RelativeLayout>
</layout>